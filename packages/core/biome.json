{
  "$schema": "https://biomejs.dev/schemas/2.0.x/schema.json",
  "extends": ["@kontent-ai/biome-config/base"],
  "files": {
    "includes": ["src/**/*.ts"]
  },
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": true,
    "root": "../.."
  },
  "linter": {
    "rules": {
      "correctness": {
        "useImportExtensions": {
          "level": "error",
          "options": {
            "forceJsExtensions": true
          }
        }
      }
    }
  }
}
