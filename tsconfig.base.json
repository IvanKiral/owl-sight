{
  "compilerOptions": {
    "target": "es2020",
    "composite": true,

    "module": "NodeNext",
    "rootDir": "./",
    "moduleResolution": "nodenext",
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true
  }
}
